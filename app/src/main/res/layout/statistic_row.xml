<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/primary">

            <TextView
                android:id="@+id/row_delete"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_white_on_primary"
                android:fontFamily="@font/font_awesome_5"
                android:gravity="center"
                android:text="@string/cross"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/row_team0_score"
                app:layout_constraintEnd_toStartOf="@+id/row_team0_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/row_team0_score" />

            <TextView
                android:id="@+id/row_team0_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="157"
                android:textSize="20dp"
                android:fontFamily="@font/adam_bold"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/row_top_line" />

            <TextView
                android:id="@+id/row_team1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="157"
                android:fontFamily="@font/adam_bold"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/row_team0_score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/row_team0_score"
                app:layout_constraintTop_toTopOf="@+id/row_team0_score" />

            <View
                android:id="@+id/row_top_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/row_end_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/primaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>